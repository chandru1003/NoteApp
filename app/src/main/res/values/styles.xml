<resources>

    <!-- Notes Light Theme -->
    <style name="NotesMainThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- Notes Dark Theme -->
    <style name="DarkMode" parent="NotesMainThemes">
        <item name="colorPrimary">@color/colorPrimary_darkmode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_darkmode</item>
        <item name="colorAccent">@color/colorAccent_darkmode</item>
        <item name="android:windowBackground">@color/colorBackground_darkmode</item>
        <item name="android:colorBackground">@color/colorBackground_darkmode</item>
        <item name="android:textColor">@color/colorText_darkmode</item>
    </style>

    <!-- Others -->
    <style name="NotesMainThemes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>